  <body>
  {{>navbar}}

    <!--main header-->
    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="row">
            <!--left side div-->
            <div class="col-md-6 col-12 main_header_right align-items-center">
              <figure>
                <img
                  src="https://i0.wp.com/learn.onemonth.com/wp-content/uploads/2017/08/1-10.png?fit=845%2C503&ssl=1"
                  class="img-fluid"
                  alt=""
                />
              </figure>
            </div>
            <!--right side div-->
            <div class="col-md-6 col-12 main_header_left">
              <p>Welcome to weather app</p>
              <h1>Opps<span>404</span> page not found</h1>
              <a href="/"><button>Home</button></a>
            </div>
          </div>
        </div>
      </div>
    </div>


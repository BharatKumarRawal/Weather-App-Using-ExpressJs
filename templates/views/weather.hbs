  <body>
    {{>navbar}}
      <!--main header-->
      <div class="container-fludi main_header">
        <div class="row">
          <div class="com-md-10 col-12 mx-auto">
            <div class="main_content">
              <form action="" class="temp_form ">
                <input type="text" id="cityName" placeholder="Enter you city name"  autocomplete="off">
                <input type="submit" name="" id="submitBtn" value="Search">
              </form>
            </div>
            <div class="tempInformation">
              <div class="top_layer">
                <p id="day">Monday</p>
                <p id="today_data">8 Jan 2024</p>
              </div>
              <div class="main_layer">
                <p id="city_name">Get City</p>
                <div class=" middle_layer data_hide">
                          <p id="temp"><span id="temp_val">0</span> <sup>o</sup>C</p>
                          <p id="temp_status"><i class="fa fa-sun"></i></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    {{>webfooter}}




    
<script >
  
const cityName = document.getElementById("cityName");
const submitBtn = document.getElementById("submitBtn");
const city_name = document.getElementById("city_name");

const temp_status = document.getElementById("temp_status");
const temp_val = document.getElementById("temp_val");

const datahide = document.querySelector(".middle_layer");

const getInfo = async (event) => {
  event.preventDefault();
  let cityVal = cityName.value;
  if (cityVal == "") {
    city_name.innerText = `Please enter the city name`;
  } else {
    try {
      cityName.value = "";
      let url = `https://api.openweathermap.org/data/2.5/weather?q=${cityVal}&units=metric&appid=206ad57c8d5867c0ecb2647a11c63501`;
      const response = await fetch(url);
      const data = await response.json();
      const arrData = [data];
      city_name.textContent = `${arrData[0].name}, ${arrData[0].sys.country}`;
      temp_val.textContent = arrData[0].main.temp;
      temp_mood = arrData[0].weather[0].main;
      if (temp_mood == "Clear") {
        temp_status.innerHTML =
          "<i class='fa fa-sun' style='color:#0097e6'> </i>";
      } else if (temp_mood == "Clouds") {
        temp_status.innerHTML =
          "<i class='fa fa-cloud' style='color:#0097e6'> </i>";
      } else if (temp_mood == "Rain") {
        temp_status.innerHTML =
          "<i class='fa fa-rain' style='color:#0097e6'> </i>";
      } else {
        temp_status.innerHTML =
          "<i class='fa fa-sun' style='color:#0097e6'> </i>";
      }

      datahide.classList.remove("data_hide");
    } catch {
      city_name.innerText = `Please enter the city name properly`;
    }
  }
};

const curDay = document.getElementById("day");
const getCurrentDay = () => {
  const weekday = ["Sun", "Mon", "Tue", "Wed", "Thur", "Fri", "Sat"];
  let cDay = new Date();
  let day = weekday[cDay.getDay()];
  return day;
};
curDay.textContent = getCurrentDay();

const curMonth = document.getElementById("today_data");

const getCurrentTime = () => {
  const months = [
    "Jan",
    "Feb",
    "Mar",
    "Apr",
    "May",
    "Jun",
    "July",
    "Aug",
    "Sept",
    "Oct",
    "Nov",
    "Dec",
  ];
  let cTime = new Date();
  let month = months[cTime.getMonth()];
  let date = cTime.getDate();
  let year = cTime.getFullYear();
  let hours = cTime.getHours();
  let mins = cTime.getMinutes();
  let period = "AM";
  if (hours > 11) {
    period = "PM";
    if (hours > 12) hours -= 12;
  }
  if (mins < 10) {
    mins = "0" + mins;
  }

  return `${date} ${month} | ${year}`;
};

curMonth.textContent = getCurrentTime();

submitBtn.addEventListener("click", getInfo);

    </script>
   

